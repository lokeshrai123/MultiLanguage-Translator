<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_input_flag"
        android:layout_width="@dimen/btn_input_size"
        android:layout_height="@dimen/input_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_item_on_input"
        android:layout_marginRight="@dimen/padding_item_on_input"
        android:scaleType="fitXY" />

    <EditText
        android:id="@+id/txt_input"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_height"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_item_on_input"
        android:layout_toLeftOf="@+id/btn_clear_text"
        android:layout_toRightOf="@+id/img_input_flag"
        android:background="@null"
        android:hint="@string/hint_input"
        android:singleLine="true"
        android:textColor="@color/black_text_color"
        android:textColorHint="@color/text_color_hint" />

    <ImageButton
        android:id="@+id/btn_clear_text"
        style="?attr/borderlessButtonStyle"
        android:layout_width="@dimen/btn_input_size"
        android:layout_height="@dimen/btn_input_size"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_go"
        android:background="@null"
        android:src="@drawable/ic_clear" />

    <ImageButton
        android:id="@+id/btn_go"
        style="?attr/borderlessButtonStyle"
        android:layout_width="@dimen/btn_input_size"
        android:layout_height="@dimen/btn_input_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_item_on_input"
        android:background="@null"
        android:src="@drawable/ic_go" />

</RelativeLayout>