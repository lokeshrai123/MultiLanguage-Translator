<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/img_flag_source"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/txt_title_souce"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_flag_des"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/txt_title_des"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_title_souce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_flag_source"
            android:paddingLeft="5dp"
            android:text="Vietnamese"
            android:textSize="@dimen/item_recent_title"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_source_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_souce"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="xin chao"
            android:textColor="#3575e1"
            android:textSize="@dimen/item_recent_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_title_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_source_word"
            android:layout_toRightOf="@+id/img_flag_des"
            android:paddingLeft="5dp"
            android:text="English"
            android:textSize="@dimen/item_recent_title"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_des_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_des"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:textColor="#55b459"
            android:textSize="@dimen/item_recent_content"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_speak_source"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignTop="@+id/txt_title_souce"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_close"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_speaker" />

        <ImageButton
            android:id="@+id/btn_speak_des"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignTop="@+id/txt_title_des"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_close"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_speaker" />

        <ImageButton
            android:id="@+id/btn_share_s"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignTop="@+id/txt_title_souce"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_speak_source"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/btn_share_d"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignTop="@+id/txt_title_des"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_speak_des"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/btn_copy_s"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignTop="@+id/txt_title_souce"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_share_s"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_copy" />

        <ImageButton
            android:id="@+id/btn_copy_d"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignTop="@+id/txt_title_des"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_share_d"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_copy" />

        <ImageButton
            android:id="@+id/btn_close"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/circle_button_close"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_close" />

        <ImageButton
            android:id="@+id/btn_mark"
            style="?attr/borderlessButtonStyle"
            android:layout_width="@dimen/item_recent_btn_size"
            android:layout_height="@dimen/item_recent_btn_size"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txt_title_des"
            android:background="@drawable/circle_button"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_star" />
    </RelativeLayout>
</android.support.v7.widget.CardView>